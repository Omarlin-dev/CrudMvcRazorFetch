@model CrudMvcRazorFetch.Models.viewModels.UserViewModels
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<center>
    <div class="row">
        <h2>Iniciar sesion</h2>

        <form action="@Url.Content("~/Usuario/Login")" method="post">
            <div class="form-group">
                <label>Usuario</label>
                @Html.TextBoxFor(d => d.UserName)
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                @Html.EditorFor(d => d.Password)
            </div>
            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-success" />
            </div>
        </form>
    </div>
</center>
